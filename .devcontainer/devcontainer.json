{
  "name": "Java Development with Gradle",
  "image": "mcr.microsoft.com/devcontainers/java:21",
  "forwardPorts": [
    8080
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "redhat.java",
        "vscjava.vscode-java-pack",
        "vscjava.vscode-java-test",
        "vmware.vscode-boot-dev-pack"
      ]
    }
  },
  "postCreateCommand": "./gradlew build"
}