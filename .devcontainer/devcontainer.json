{
  "name": "Java Development with Gradle",
  "image": "mcr.microsoft.com/devcontainers/java:22",
  "forwardPorts": [
    8080
  ],
  "customizations": {
    "vscode": {
      "settings": {
        "java.home": "/usr/local/java",
        "java.import.gradle.enabled": true
      },
      "extensions": [
        "vscjava.vscode-java-pack",
        "vmware.vscode-boot-dev-pack"
      ]
    }
  },
  "postCreateCommand": "./gradlew build"
}